<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_40"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_r"
        android:gravity="center_horizontal"
        android:textColor="@color/color_FF424242"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16" />

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_3"
        android:background="@color/color_FF424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/line2" />

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_FF424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/line1"
        app:layout_constraintRight_toLeftOf="@+id/line3" />

    <View
        android:id="@+id/line3"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@color/color_FF424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/line2"
        app:layout_constraintRight_toLeftOf="@+id/line4"
        app:layout_constraintTop_toBottomOf="@+id/txt_contents" />

    <View
        android:id="@+id/line4"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_FF424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/line3"
        app:layout_constraintRight_toLeftOf="@+id/line5" />

    <View
        android:id="@+id/line5"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_3"
        android:background="@color/color_FF424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/line4"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
