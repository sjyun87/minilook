<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragment.scrapbook.ScrapBookFragment">

    <com.minilook.minilook.ui.base.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:setTitle="@string/scrapbook_title"
        app:showTitle="true" />

    <LinearLayout
        android:id="@+id/layout_tab_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_8"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/titlebar">

        <TextView
            android:id="@+id/txt_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_round"
            android:gravity="center"
            android:text="@string/scrapbook_product"
            android:textColor="@color/color_FFA9A9A9"
            android:textSize="@dimen/sp_7"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_brand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_round"
            android:gravity="center"
            android:text="@string/scrapbook_brand"
            android:textColor="@color/color_FFA9A9A9"
            android:textSize="@dimen/sp_7"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_recent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_round"
            android:gravity="center"
            android:text="@string/scrapbook_recent"
            android:textColor="@color/color_FFA9A9A9"
            android:textSize="@dimen/sp_7"
            android:textStyle="normal" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_tab_panel" />
</androidx.constraintlayout.widget.ConstraintLayout>