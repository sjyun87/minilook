<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.product_bridge.ProductBridgeActivity">

        <com.minilook.minilook.ui.base.widget.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:showBack="true"
            app:showShoppingBag="true"
            app:showTitle="true" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/layout_tab_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            app:layout_constraintTop_toBottomOf="@+id/titlebar"
            app:tabIndicatorColor="@color/color_FF8140E5"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="@dimen/dp_1"
            app:tabMinWidth="0dp"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/dp_10"
            app:tabPaddingStart="@dimen/dp_10"
            app:tabRippleColor="@android:color/transparent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_options_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:clipToPadding="false"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@+id/layout_tab_panel"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:orientation="horizontal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dp_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_options_panel"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_product_type_grid"
            tools:spanCount="2" />

        <LinearLayout
            android:id="@+id/layout_empty_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_FFFFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_options_panel"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_r"
                android:text="@string/search_filter_empty"
                android:textColor="@color/color_FF616161"
                android:textSize="@dimen/sp_7" />

            <TextView
                android:id="@+id/txt_empty"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_36"
                android:background="@drawable/bg_button_border_dark"
                android:fontFamily="@font/nanum_square_b"
                android:gravity="center"
                android:paddingStart="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_30"
                android:text="@string/search_filter_empty_button"
                android:textColor="@color/color_FF232323"
                android:textSize="@dimen/sp_7" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/curtain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_80000000"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@color/color_FFFFFFFF"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/layout_bottom_tab_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            app:layout_constraintBottom_toTopOf="@+id/vp_option"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorColor="@color/color_FF8140E5"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="@dimen/dp_1"
            app:tabMinWidth="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="@dimen/dp_10"
            app:tabPaddingStart="@dimen/dp_10"
            app:tabRippleColor="@android:color/transparent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_option"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_bottom_tab_panel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>