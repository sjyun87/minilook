<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_68"
    android:background="@color/color_FFFFFFFF">

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/dp_2"
        android:layout_height="0dp"
        android:background="@color/color_FF8140E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_coupon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_eb"
        android:textColor="@color/color_FF8140E5"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5,0000" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_7"
        app:layout_constraintLeft_toLeftOf="@+id/txt_coupon"
        app:layout_constraintRight_toRightOf="@+id/txt_coupon"
        app:layout_constraintTop_toBottomOf="@+id/txt_coupon"
        tools:text="미니룩 회원가입 5,000원 할인 쿠폰" />

    <TextView
        android:id="@+id/txt_use_condition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintLeft_toLeftOf="@+id/txt_coupon"
        app:layout_constraintRight_toRightOf="@+id/txt_coupon"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        tools:text="50,000원 이상 구매시 사용가능" />

    <View
        android:id="@+id/curtain"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/color_1A000000"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="2020.09.13" />
</androidx.constraintlayout.widget.ConstraintLayout>
