<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.minilook.minilook.ui.base.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:setTitle="@string/point_title"
        app:showBack="true"
        app:showTitle="true" />

    <ImageView
        android:id="@+id/img_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:src="@drawable/ic_point"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:fontFamily="@font/nanum_square_r"
        android:text="@string/point_my_point"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_7"
        app:layout_constraintBottom_toBottomOf="@+id/img_point"
        app:layout_constraintLeft_toRightOf="@+id/img_point"
        app:layout_constraintTop_toTopOf="@+id/img_point" />

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_3"
        android:src="@drawable/ic_info"
        app:layout_constraintBottom_toBottomOf="@+id/img_point"
        app:layout_constraintLeft_toRightOf="@+id/txt_point"
        app:layout_constraintTop_toTopOf="@+id/img_point"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_my_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_eb"
        android:textColor="@color/color_FF8140E5"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/img_point"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_point"
        tools:text="10,000P" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/color_FFF5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/img_point" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_point_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />
</androidx.constraintlayout.widget.ConstraintLayout>