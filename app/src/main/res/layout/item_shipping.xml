<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_4"
    android:background="@color/color_FFFFFFFF">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="이소연" />

    <TextView
        android:id="@+id/txt_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:background="@drawable/bg_round_border_gray"
        android:fontFamily="@font/nanum_square_r"
        android:paddingStart="@dimen/dp_6"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_2"
        android:text="@string/shipping_default"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@+id/txt_name"
        app:layout_constraintLeft_toRightOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="@+id/txt_name" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_7"
        app:layout_constraintLeft_toLeftOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        tools:text="010-1233-4567" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_r"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone"
        tools:text="서울 양천구 목동중앙남로 342, 302호" />

    <TextView
        android:id="@+id/txt_select"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/bg_button_border_purple"
        android:fontFamily="@font/nanum_square_b"
        android:gravity="center"
        android:text="@string/shipping_select"
        android:textColor="@color/color_FF8140E5"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_address" />

    <TextView
        android:id="@+id/txt_edit"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_4"
        android:background="@drawable/bg_button_border_gray"
        android:fontFamily="@font/nanum_square_b"
        android:gravity="center"
        android:text="@string/shipping_edit"
        android:textColor="@color/color_FFA9A9A9"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@+id/txt_select"
        app:layout_constraintRight_toLeftOf="@+id/txt_select"
        app:layout_constraintTop_toTopOf="@+id/txt_select" />
</androidx.constraintlayout.widget.ConstraintLayout>