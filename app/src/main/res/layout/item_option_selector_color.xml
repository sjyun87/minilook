<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_24">

    <View
        android:id="@+id/line_left"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_FFA9A9A9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.minilook.minilook.ui.base.widget.ColorView
        android:id="@+id/view_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/line_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_weight="1"
        android:bufferType="spannable"
        android:fontFamily="@font/nanum_square_b"
        android:includeFontPadding="false"
        android:textColor="@color/color_FF424242"
        android:textSize="@dimen/sp_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_color"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="화이트" />

    <TextView
        android:id="@+id/txt_color_sold_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:fontFamily="@font/nanum_square_r"
        android:includeFontPadding="false"
        android:text="@string/option_selector_sold_out"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_7"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/line_right"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/line_right"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_FFA9A9A9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>