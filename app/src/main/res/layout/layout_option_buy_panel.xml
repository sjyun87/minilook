<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_option_buy_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_80"
    android:background="@color/color_FFFFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/txt_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_r"
        android:text="미니룩은 전상품 무료배송!"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_select_box_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/bg_select_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_6"
        app:layout_constraintTop_toBottomOf="@+id/txt_banner">

        <TextView
            android:id="@+id/txt_selected_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_b"
            android:text="@string/option_selector_select_box_hint"
            android:textColor="@color/color_FF616161"
            android:textSize="@dimen/sp_6" />

        <ImageView
            android:id="@+id/img_option_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down_black"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_selected_product"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="@+id/layout_select_box_panel"
        app:layout_constraintRight_toRightOf="@+id/layout_select_box_panel"
        app:layout_constraintTop_toBottomOf="@+id/layout_select_box_panel" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_FFDBDBDB"
        app:layout_constraintBottom_toTopOf="@+id/txt_total_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_selected_product" />

    <TextView
        android:id="@+id/txt_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_r"
        android:gravity="center"
        android:text="@string/option_selector_total_count"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@+id/txt_total_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_total_price" />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_4"
        android:fontFamily="@font/nanum_square_r"
        android:gravity="center"
        android:text="@string/option_selector_total_price"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@+id/txt_total_price"
        app:layout_constraintRight_toLeftOf="@+id/txt_total_price"
        app:layout_constraintTop_toTopOf="@+id/txt_total_price" />

    <TextView
        android:id="@+id/txt_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_eb"
        android:gravity="center"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:textColor="@color/color_FF8140E5"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/txt_buy_now"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="28,000" />

    <TextView
        android:id="@+id/txt_shopping_bag"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_32"
        android:background="@color/color_FFEEEFF5"
        android:fontFamily="@font/nanum_square_eb"
        android:gravity="center"
        android:letterSpacing="-0.02"
        android:text="@string/option_selector_shopping_bag"
        android:textColor="@color/color_FF8140E5"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_buy_now" />

    <TextView
        android:id="@+id/txt_buy_now"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_32"
        android:background="@color/color_FF8140E5"
        android:fontFamily="@font/nanum_square_eb"
        android:gravity="center"
        android:letterSpacing="-0.02"
        android:text="@string/option_selector_buy_now"
        android:textColor="@color/color_FFFFFFFF"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_shopping_bag"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>