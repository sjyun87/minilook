<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/placeholder_image" />

    <TextView
        android:id="@+id/txt_state"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_14"
        android:background="@color/color_FF8140E5"
        android:fontFamily="@font/nanum_square_r"
        android:gravity="center"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:text="@string/preorder_open"
        android:textColor="@color/color_FFFFFFFF"
        android:textSize="@dimen/sp_7"
        app:layout_constraintBottom_toBottomOf="@+id/img_thumb"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_end_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_14"
        android:background="@color/color_FF232323"
        android:fontFamily="@font/nanum_square_r"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:textColor="@color/color_FFFFFFFF"
        android:textSize="@dimen/sp_7"
        app:layout_constraintBottom_toBottomOf="@+id/img_thumb"
        app:layout_constraintLeft_toRightOf="@+id/txt_state"
        app:layout_constraintRight_toRightOf="@+id/img_thumb"
        tools:text="10/31(토) D-23" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_64"
        android:background="@color/color_FFF5F6F9"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@+id/img_thumb"
        app:layout_constraintRight_toRightOf="@+id/img_thumb"
        app:layout_constraintTop_toBottomOf="@+id/img_thumb">

        <TextView
            android:id="@+id/txt_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="@font/nanum_square_b"
            android:textColor="@color/color_FF616161"
            android:textSize="@dimen/sp_7"
            tools:text="미니룩" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_b"
            android:maxLines="1"
            android:textColor="@color/color_FF232323"
            android:textSize="@dimen/sp_9"
            tools:text="10월의 선물 X 7일간의 특가" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_r"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
            android:textColor="@color/color_FF232323"
            android:textSize="@dimen/sp_6"
            tools:text="다시는 없을 가격으로 20FW신상 플리스아우터와 6온스 코듀로이재킷을 프리오더 하세요." />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>