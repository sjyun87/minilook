<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_160"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_contents_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_logo_symbol"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_18"
            android:src="@drawable/img_logo_symbol"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:src="@drawable/img_logo_text_small"
            app:layout_constraintBottom_toBottomOf="@+id/img_logo_symbol"
            app:layout_constraintLeft_toRightOf="@+id/img_logo_symbol"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/nanum_square_b"
            android:text="@string/dialog_trial_version_title"
            android:textColor="@color/color_FF232323"
            android:textSize="@dimen/sp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_logo_symbol" />

        <TextView
            android:id="@+id/txt_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/nanum_square_r"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/dialog_trial_version_contents"
            android:textColor="@color/color_FF232323"
            android:textSize="@dimen/sp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/layout_contents_panel" />

    <TextView
        android:id="@+id/txt_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:fontFamily="@font/nanum_square_b"
        android:gravity="center"
        android:text="@string/dialog_ok"
        android:textColor="@color/color_FF6200EA"
        android:textSize="@dimen/sp_8"
        app:layout_constraintTop_toBottomOf="@+id/line" />
</androidx.constraintlayout.widget.ConstraintLayout>