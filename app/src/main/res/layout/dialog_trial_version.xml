<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_160"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFFFF">

    <ImageView
        android:id="@+id/img_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/img_event_popup"
        app:layout_constraintDimensionRatio="H,2:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/img_event" />

    <TextView
        android:id="@+id/txt_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:fontFamily="@font/nanum_square_b"
        android:gravity="center"
        android:text="@string/dialog_trial_version_button"
        android:textColor="@color/color_FF6200EA"
        android:textSize="@dimen/sp_8"
        app:layout_constraintTop_toBottomOf="@+id/line" />
</androidx.constraintlayout.widget.ConstraintLayout>