<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product_detail.ProductDetailActivity">

    <com.minilook.minilook.ui.base.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:showBack="true"
        app:showHome="true"
        app:showShoppingBag="true" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_product_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@+id/titlebar"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_product_detail_image"
        tools:orientation="horizontal" />


    <LinearLayout
        android:id="@+id/layout_brand_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_product_image">

        <TextView
            android:id="@+id/txt_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_b"
            android:includeFontPadding="false"
            android:textColor="@color/color_FF232323"
            android:textSize="@dimen/sp_8"
            tools:text="아델리" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nanum_square_r"
            android:includeFontPadding="false"
            android:text="@string/base_brand_shop"
            android:textColor="@color/color_FF232323"
            android:textSize="@dimen/sp_7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_1"
            android:src="@drawable/ic_arrow_black"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_r"
        android:letterSpacing="-0.02"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/base_brand_shop"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_brand_panel"
        tools:text="[추가 20%+무배] 경량 비치 후드집업 점퍼 IKJ-M2041G1_화이트/라임그린/민트그린" />

    <TextView
        android:id="@+id/txt_price_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/color_FFA9A9A9"
        android:textSize="@dimen/sp_7"
        app:layout_constraintLeft_toLeftOf="@+id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_name"
        tools:text="63,000" />

    <TextView
        android:id="@+id/txt_discount_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_6"
        android:fontFamily="@font/nanum_square_b"
        android:letterSpacing="-0.02"
        android:textColor="@color/color_FFFF3C50"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/txt_price"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/txt_product_name"
        app:layout_constraintRight_toLeftOf="@+id/txt_price"
        app:layout_constraintTop_toTopOf="@+id/txt_price"
        tools:text="20%" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:fontFamily="@font/nanum_square_eb"
        android:letterSpacing="-0.02"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/txt_discount_percent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_price_origin"
        app:layout_goneMarginTop="@dimen/dp_10"
        tools:text="52,000" />

    <TextView
        android:id="@+id/txt_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:fontFamily="@font/nanum_square_r"
        android:text="@string/product_detail_point_title"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintLeft_toLeftOf="@+id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_price" />

    <TextView
        android:id="@+id/txt_point_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:bufferType="spannable"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@+id/txt_point"
        app:layout_constraintLeft_toRightOf="@+id/txt_point"
        app:layout_constraintTop_toTopOf="@+id/txt_point"
        tools:text="52P 적립" />

    <TextView
        android:id="@+id/txt_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:fontFamily="@font/nanum_square_r"
        android:text="@string/product_detail_delivery"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintLeft_toLeftOf="@+id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_point" />

    <TextView
        android:id="@+id/txt_delivery_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:bufferType="spannable"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/color_FF616161"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@+id/txt_delivery"
        app:layout_constraintLeft_toLeftOf="@+id/txt_point_save"
        app:layout_constraintTop_toTopOf="@+id/txt_delivery"
        tools:text="미니룩은 전상품 무료배송!" />


</androidx.constraintlayout.widget.ConstraintLayout>