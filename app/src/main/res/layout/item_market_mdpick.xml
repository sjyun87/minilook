<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_18"
    android:paddingBottom="@dimen/dp_18">

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/color_FF8140E5"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/line"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:text="MD PICK" />

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_9"
        android:background="@color/color_FFF5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_top" />

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_FFF5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/rcv_category" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/line_bottom" />
</androidx.constraintlayout.widget.ConstraintLayout>