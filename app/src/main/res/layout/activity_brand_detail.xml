<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.minilook.minilook.ui.base.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:showBack="true"
        app:showHome="true"
        app:showShoppingBag="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebar"
        tools:context=".ui.promotion_detail.PromotionDetailActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_50">

            <ImageView
                android:id="@+id/img_thumb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,180:135"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />


            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/img_thumb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_thumb"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:padding="@dimen/dp_6"
                android:src="@drawable/ic_share"
                app:layout_constraintRight_toLeftOf="@+id/img_scrap"
                app:layout_constraintTop_toBottomOf="@+id/img_thumb"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img_scrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:src="@drawable/ic_scrap_off"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_thumb"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_scrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_r"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_2"
                android:textColor="@color/color_FF616161"
                android:textSize="@dimen/sp_6"
                app:layout_constraintLeft_toLeftOf="@+id/img_scrap"
                app:layout_constraintRight_toRightOf="@+id/img_scrap"
                app:layout_constraintTop_toBottomOf="@+id/img_scrap"
                tools:text="1000" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_28"
                android:fontFamily="@font/nanum_square_b"
                android:letterSpacing="-0.02"
                android:textColor="@color/color_FF232323"
                android:textSize="@dimen/sp_11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_thumb"
                tools:text="아델리" />

            <TextView
                android:id="@+id/txt_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_10"
                android:fontFamily="@font/nanum_square_r"
                android:textColor="@color/color_FF616161"
                android:textSize="@dimen/sp_6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_name"
                tools:text="#스트릿 #밀리터리 #빈티지" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_10"
                android:fontFamily="@font/nanum_square_r"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/color_FF232323"
                android:textSize="@dimen/sp_7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_tag"
                tools:text="아델리는 매시즌 완성도 높은 퀄리티의 좋은 소재로 의복을 만들었습니다. 편안함과 세련된 감성이 공존하며 입었을 때 웨어러블하며 여성스러움을 담아내고자 만들어진 브랜드입니다." />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:clipToPadding="false"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/txt_desc"
                tools:itemCount="10"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_brand_detail_style"
                tools:orientation="horizontal" />

            <View
                android:id="@+id/line_brand_info_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@color/color_FFDBDBDB"
                app:layout_constraintTop_toBottomOf="@+id/rcv_style" />

            <LinearLayout
                android:id="@+id/layout_brand_info_panel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/line_brand_info_top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@drawable/ic_info"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_2"
                    android:fontFamily="@font/nanum_square_b"
                    android:includeFontPadding="false"
                    android:text="@string/brand_detail_info_title"
                    android:textColor="@color/color_FF232323"
                    android:textSize="@dimen/sp_7" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_square_r"
                    android:includeFontPadding="false"
                    android:text="@string/brand_detail_info_desc"
                    android:textColor="@color/color_FF616161"
                    android:textSize="@dimen/sp_6" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:src="@drawable/ic_arrow_right_black"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <View
                android:id="@+id/line_brand_info_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_FFDBDBDB"
                app:layout_constraintTop_toBottomOf="@+id/layout_brand_info_panel" />

            <TextView
                android:id="@+id/txt_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_32"
                android:fontFamily="@font/nanum_square_eb"
                android:text="@string/brand_detail_pick_title"
                android:textColor="@color/color_FF232323"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_brand_info_bottom" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@+id/txt_pick"
                tools:itemCount="10"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_brand_detail_style"
                tools:orientation="horizontal" />

            <TextView
                android:id="@+id/txt_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_32"
                android:fontFamily="@font/nanum_square_eb"
                android:text="@string/brand_detail_product_title"
                android:textColor="@color/color_FF232323"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rcv_pick" />

            <View
                android:id="@+id/line_category_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/color_FFF5F5F5"
                app:layout_constraintTop_toBottomOf="@+id/txt_product" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_category_top"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_brand_detail_category"
                tools:orientation="horizontal" />

            <View
                android:id="@+id/line_category_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_FFF5F5F5"
                app:layout_constraintTop_toBottomOf="@+id/rcv_category" />

            <LinearLayout
                android:id="@+id/layout_sort_panel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_category_bottom">

                <TextView
                    android:id="@+id/txt_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_r"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_FF616161"
                    android:textSize="@dimen/sp_6"
                    tools:text="최신등록순" />

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:src="@drawable/ic_arrow_down_xs"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_sort_panel" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sort"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_sort_panel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>