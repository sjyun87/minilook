<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@color/color_FFF5F5F5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_10"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_brand_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_10"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toTopOf="@+id/txt_goods_name"
        app:layout_constraintLeft_toRightOf="@+id/img_thumb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_thumb"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="아델리" />

    <TextView
        android:id="@+id/txt_goods_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="end"
        android:fontFamily="@font/nanum_square_b"
        android:maxLines="1"
        android:textColor="@color/color_FF232323"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toTopOf="@+id/txt_state"
        app:layout_constraintLeft_toLeftOf="@+id/txt_brand_name"
        app:layout_constraintRight_toRightOf="@+id/txt_brand_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_brand_name"
        tools:text="경량 비치 후드집업 점퍼 IKJM204170 …" />

    <TextView
        android:id="@+id/txt_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="@color/color_FF8140E5"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@+id/img_thumb"
        app:layout_constraintLeft_toLeftOf="@+id/txt_brand_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_goods_name"
        tools:text="주문완료" />
</androidx.constraintlayout.widget.ConstraintLayout>
