<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_FFFFFFFF</item>
        <item name="colorPrimaryDark">@color/color_FFFFFFFF</item>
        <item name="colorAccent">@color/color_FF8140E5</item>

        <!--Full Screen-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!--Over Scroll Mode-->
        <item name="android:overScrollMode">never</item>

        <!--Background Color-->
        <item name="android:windowBackground">@color/color_FFFFFFFF</item>
        <item name="android:colorBackground">@color/color_FFFFFFFF</item>
    </style>
</resources>
